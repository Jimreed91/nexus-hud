{
  "manifest_version": 3,
  "name": "nexus-hud",
  "version": "1.0",
  "description": "A clean and simple HUD for necus clash that visualises the key environmental info",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {  "default_popup": "popup.html", "default-icon": "images/icon-32.png" },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": [ "styles/lights.css" ],
      "matches": [ "https://www.nexusclash.com/*", "https://nexusclash.com/*" ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "/images/*" ],
      "matches": [ "https://www.nexusclash.com/*", "https://nexusclash.com/*" ]

    }
  ]




}
